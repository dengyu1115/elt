<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_context"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:id="@+id/fore"
                  android:tag="fore"
                  android:onClick="switchMain"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toTaskList"
                    android:text="任务列表"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toLineView"
                    android:text="折线实例"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toBsList"
                    android:text="买卖列表"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toTargetList"
                    android:text="目标数据列表"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toPriceNetList"
                    android:text="价格净值列表"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toFundRate"
                    android:text="基金涨幅列表"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toKlineList"
                    android:text="K线列表"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toQuotaView"
                    android:text="大盘指标查看"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toItemQuota"
                    android:text="项目指标列表"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/back"
                  android:tag="back"
                  android:onClick="switchMain"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="gone"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="initWorkdays"
                    android:text="工作日初始化"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="testNotification"
                    android:text="通知栏示例"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="startTaskService"
                    android:text="服务启动"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="stopTaskService"
                    android:text="服务关闭"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toManageGroup"
                    android:text="分组管理"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toEditItemGroup"
                    android:text="项目分组编辑"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toDefineFundList"
                    android:text="基金页面定义"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="toMarkManage"
                    android:text="标记数据编辑"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_weight="1">
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="reloadItem"
                    android:text="项目数据重载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="reloadNet"
                    android:text="净值数据重载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="reloadKline"
                    android:text="K线数据重载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="reloadQuota"
                    android:text="指数指标重载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="reloadScale"
                    android:text="规模数据重载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="loadLatestNet"
                    android:text="净值最新加载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="loadLatestKline"
                    android:text="K线最新加载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="loadLatestQuota"
                    android:text="指数最新加载"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="calculateKlineAverage"
                    android:text="K线均值计算"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="calculatePriceNet"
                    android:text="价值净值计算"/>
            <Button android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:onClick="recalculatePriceNet"
                    android:text="价值净值重算"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>